{% extends 'front/base.html.twig' %}

{% set route = app.request.get('_route') %}

{% block body %}
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#defaultNavbar1"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
                <a class="navbar-brand" href="/"><img src="{{ asset('build/images/logo-color.svg') }}" alt="Pix.City" /></a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="defaultNavbar1">

                <ul class="nav navbar-nav navbar-left nav-account">
                    {# <li><a class="{{ route starts with 'front_pixie_account_cards_address' ? 'active' }} fa fa-address-book" href="{{ path('front_pixie_account_card_address') }}"><span>Envoyer addresses</span></a></li> #}
                    {# if app.user.password is not null #}
                    <li><a class="{{ route starts with 'front_pixie_account_cards_projects' ? 'active' }} fal fa-inbox-in" href="{{ path('front_pixie_account_cards_projects') }}"><span>Demandes de Cards</span></a></li>
                    <li><a class="{{ route starts with 'front_pixie_account_cards_status' ? 'active' }} fa fa-pause-circle" href="{{ path('front_pixie_account_cards_status') }}"><span>Cards en attente</span></a></li>
                    <li><a class="{{ route starts with 'front_pixie_account_cards_validated' ? 'active' }} fa fa-check-circle" href="{{ path('front_pixie_account_cards_validated') }}"><span>Cards validées</span></a></li>
                    <li><a class="{{ route starts with 'front_pixie_account_cards_payments' ? 'active' }} fa fa-euro-sign" href="{{ path('front_pixie_account_cards_payments') }}"><span>Mes rémunérations</span></a></li>
                    {# endif #}
                    <li><a class="{{ route starts with 'front_pixie_account_settings' ? 'active' }} fa fa-cog" href="{{ path('front_pixie_account_settings') }}"><span>Paramètres</span></a></li>
                </ul>


            </div>
            <!-- /.navbar-collapse -->
            <a href="/" id="btnCloseAccount" class="fa fa-times"></a>
        </div>
        <!-- /.container-fluid -->
    </nav>

    {% block page_content %}

    {% endblock %}

    <!-- FOOTER -->
    <footer class="{% block footer_class %}simpleFooter{% endblock %}">
        {% embed "front/_shared/footer.html.twig" with {'footer_class': 'simpleFooter'} %}{% endembed %}
    </footer>

{% endblock %}
