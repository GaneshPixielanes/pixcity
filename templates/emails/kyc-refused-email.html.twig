{% extends 'emails/_base.html.twig' %}

{% block body %}
    <p>Hi,</p>
    
    {% if identity_refused_users is not empty %}

    <p>The following users got their <strong>IDENTITY PROOF</strong> rejected</p>
    <table class="table-striped" width="100%">
        <thead>
            <tr>
                <th>CM ID</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Contact Number</th>
            </tr>
        </thead>
        <tbody>
            {% for row in identity_refused_users %}
                <tr>
                    <td>{{ row.id }}</td>
                    <td>{{ row.firstname ? row.firstname ~' '~ row.lastname : 'N/A' }}</td>
                    <td>{{ row.email ? row.email : 'N/A' }}</td>
                    <td>{{ row.phone ? row.phone : 'N/A' }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endif %}
    {% if address_refused_users is not empty %}
    <p>The following users got their <strong>ADDRESS PROOF</strong> rejected</p>

        <table class="table-striped" width="100%">
        <thead>
            <tr>
                <th>CM ID</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Contact Number</th>
            </tr>
        </thead>
        <tbody>
            {% for row in address_refused_users %}
                <tr>
                    <td>{{ row.id }}</td>
                    <td>{{ row.firstname ? row.firstname ~' '~ row.lastname : 'N/A' }}</td>
                    <td>{{ row.email ? row.email : 'N/A' }}</td>
                    <td>{{ row.phone ? row.phone : 'N/A' }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endif %}
    <br/>
    <br/>
{% endblock %}