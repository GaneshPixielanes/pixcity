{% block form_errors -%}
    {% if errors|length > 0 -%}
        {% if form is not rootform %}<span class="error-message">{% else %}<div class="alert alert-danger">{% endif %}
        <ul class="list-unstyled errors-list">
        {%- for error in errors -%}
            <li><span class="glyphicon glyphicon-exclamation-sign"></span> {{ error.message }}</li>
        {%- endfor -%}
    </ul>
        {% if form is not rootform %}</span>{% else %}</div>{% endif %}
    {%- endif %}
{%- endblock form_errors %}

{% block _mission_client_widget %}
    <div class="row">
        <div class="col-md-12 client-selection-container mb-5">
            <h4 class="fz-24 font-weight-light">Sélectionnez votre client</h4>
            <div class="row">
                <div class="col-md-12 client-selection-cards">
                    <div class="row">
                        <ul class="d-flex w-100">
                            {% set data = form.vars.data %}
                            {% for client in form.vars.choices %}
                                <li class="col-md-4 mb-4">
                                    <a href="javascript:;" class="card p-3">
                                        {% if data.id is defined and data.id == client.data.id %}
                                        <input class="select" type="radio" name="{{ form.vars.full_name }}" value="{{ client.data.id }}" checked>
                                        {% else %}
                                        <input class="select" type="radio" name="{{ form.vars.full_name }}" value="{{ client.data.id }}">
                                            {% endif %}
                                        <div class="row">
                                            <div class="card-content d-flex justify-content-center align-items-center">
                                                <div class="col-md-4 text-center">
                                                    <img  class="rounded-circle" src="/uploads/clients/{{ client.data.id }}/{{ client.data.profilePhoto }}">
                                                </div>
                                                <div class="col-md-8 fz-14 text-darkblue">
                                                    {{ client.data.company }} <span class="d-block fz-12 text-seagreen">{{ client.data.firstName~' '~client.data.lastName}}</span>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block _mission_referencePack_widget %}
