{% block _mission_region_widget %}

    <div class="pack-region-container preview col-sm-12 mt-2 mb-4 pb-4">
        <h5 class="text-darkgray mb-3">Zone géographique</h5>
        <ul class="nav nav-pills mb-3 pack-regions nav-justified" id="pack-regions"
            role="tablist">
            {% for choice in form.vars.choices %}
            <li class="nav-item pack-region-item mr-3">
                <a class="nav-link {% if loop.index == 1 %}active{% endif %} bg-lightwhite text-darkgray py-3 text-left"
                   id="region-01" data-toggle="pill" href="#region_{{ loop.index }}" role="tab"
                   aria-controls="region01" aria-selected="true"><span
                            class="font-weight-bold">Région {{ loop.index }}</span> <span class="ml-3">{{ choice.data.name }}</span></a>
                <input type="radio" name="{{ form.vars.full_name }}" value="{{ choice.data.id }}" checked="checked"/>

            </li>
            {% endfor %}
        </ul>
        <div class="tab-content" id="pills-tabContent">
            {% for choice in form.vars.choices %}
                <div class="tab-pane fade show {% if loop.index == 1 %}active{% endif %}" id="region_{{ loop.index }}" role="tabpanel"
                     aria-labelledby="region-01">
                    <img src="{{ absolute_url('/assets/images/zone-map.jpg') }}" class="img-fluid" alt="{{ choice.data.name }}">
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

