            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#billing" role="tab" aria-controls="billing">
                    <i class="fas fa-file-invoice-dollar"></i>Facturation</a>
            </li>
        </ul>
        <footer class="text-center p-2 text-pink fz-12">
