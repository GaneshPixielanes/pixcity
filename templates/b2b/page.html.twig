    <script>
        $(document).ready(function()
        {
            $(document).on('click','.terminate-mission-activate',function () {
                var mission = $(this).attr('data-id');
               $('#terminate-mission').attr('terminate-data-id',mission);
            });

            $(document).on('click','.cancel-mission-activate', function () {
                $('#cancel-mission-btn').attr('data-id',$(this).attr('data-id'));
            });

            $('#cancel-mission-btn').on('click', function (e) {
                $.ajax('/community-manager/mission/status',{
                    type: 'POST',
                    data: {
                        'id': $(this).attr('data-id'),
                        'status': 'cancel',
                        'cancelledBy': $('.select-canceller option:selected').val(),
                        'reason':$('.cancel-reason').text(),
                        '_token':"{{ csrf_token(app.user.id) }}"
                    },
                    success:function(result)
                    {
                        if(result.success == true)
                        {
                            $('.close-preview-edit').trigger('click');
                            $('.btn-white-cancel').trigger('click');
                        }
                        else
                        {
                            alert('Sorry! Status couldn\'t be updated');
                        }
                    }
                })
            });
            $('#terminate-mission').on('click', function(e){

                e.preventDefault();

                updateStatus($(this).attr('terminate-data-id'),'terminate');
            });

            $('#cancel-mission').on('click', function (e)
            {
                e.preventDefault();

                updateStatus($(this).attr('cancel-data-id'),'cancel');
            });

            function updateStatus(id, status)
            {
                $.ajax('/community-manager/mission/status',{
                    type: 'POST',
                    data: {
                        'id': id,
                        'status': status,
                        '_token':"{{ csrf_token(app.user.id) }}"
                    },
                    success:function(result)
                    {
                        if(result.success == true)
                        {
                            $('.close-preview-edit').trigger('click');
                            $('.btn-white-cancel').trigger('click');
                        }
                        else
                        {
                            alert('Sorry! Status couldn\'t be updated');
                        }
                    }
                })
            }

        });

