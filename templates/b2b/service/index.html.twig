{% block javascripts %}
    <script>
        /* custom per page scripts */
        $('.cm-slider').slick({
            arrows: true,
            centerMode: true,
            centerPadding: '0px',
            slidesPerRow: 3,
            slidesToShow: 3,
            infinite: true,
        });
        $('.cm-pack-slider').slick({
            arrows: true,
            slidesPerRow: 1,
            slidesToShow: 1,
            infinite: true,
        });
        $('.testimonial-slider-container').slick({
            arrows: false,
            dots: true,
            infinite: true,
            slidesToShow: 3,
            slidesToScroll: 3,
            responsive: [
                {
                    breakpoint: 760,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 2
                    }
                },
                {
                    breakpoint: 540,
                    settings: {
                        slidesToShow: 1,
                        slidesToScroll: 1
                    }
                }
            ]
        });
        /* Send info contact form*/
        /* toasts initialization */
        $("#sendInfo").click(function(){
            $('.send-info-toast').toast('show');
        });
        $(document).on('hidden.bs.toast', function () {
            $('.send-info-toast').css({
                'z-index': '1032'
            })
        });
    </script>
{% endblock %}