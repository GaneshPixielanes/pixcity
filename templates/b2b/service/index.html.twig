{% extends 'b2b/client/base.html.twig' %}

{% import 'b2b/shared/macros.html.twig' as macros %}
{% block title %}Client | Home {% endblock %}

{% block newbody %}


    <div class="services-home-page">
        {% for message in app.flashes('contact_send') %}
            <div class="alert alert-dismissible" role="alert" style="background-color: #30b996;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong></strong> {{ message }}
            </div>
        {% endfor %}

        <!-- Banner Starts-->
        <div class="banner-wrap">
            <div class="banner-image"></div>
            <div class="banner-content w-100">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 d-flex align-items-center content">
                            <form action="{{ path('b2b_client_search_index') }}" method="get">
                                <div class="w-100">
                                    <div class="row">
                                        <div class="col-md-9">
                                            <h1 class="fz-28 font-weight-bold">La solution de community management local</h1>
                                            <p class="fz-20 font-weight-light">Un community manager / influenceur local, basé(e) près de chez vous, vous accompagne pour gérer la visibilité locale de votre enseigne, commerce, établissement.</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 mb-3">
                                            <div class="input-group shadow">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" id="inputGroup-sizing-default">
                                                        <i class="fas fa-search"></i>
                                                    </span>
                                                </div>
                                                <input type="search" name="search" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="Essayez : Community-Manager, Influenceur local">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 mb-3">
                                            <select name="regions[]" class="selectpicker shadow" data-width="100%" data-live-search="true" data-size="5" title="Toutes régions">
                                                <option value="">Toutes régions</option>
                                                {% for region in regions %}
                                                    <option value="{{ region.slug }}">{{ region.name }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 ml-auto">
                                            <button type="submit" class="btn btn-darkblue btn-block lh2 shadow-lg search-service">Rechercher</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-6"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Banner Ends-->
        <!-- Services Starts-->
