{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}


{% block body %}
    <div class="container">
        <div class="col-md-12" style="margin:50px;margin-top:100px">
            <form name="client" method="post" enctype="multipart/form-data">
            <div class="form-group text-center">
                <img src="https://www.placehold.it/200" alt="Profile pic" />
                {{ form_row(form.profilePhoto) }}
                <div class="row">
                    <input type="file" name="files" id="profile-photo" accept=".jpg, .jpeg, .png"/>
                </div>
            </div>
            <div class="row">
                    <div class="col-md-5" >

                        {{ form_row(form.email) }}
                        {{ form_row(form.firstName) }}
                        {{ form_row(form.lastName) }}
                        {{ form_row(form.company) }}
                        {{ form_row(form.plainPassword.first, {'icon': 'fa-lock'}) }}
                        {{ form_row(form.plainPassword.second, {'icon': 'fa-lock'}) }}
                        <div class="row">
                            <input type="submit" value="Save" class="btn btn-success">
                        </div>
                    </div>
                    <div class="col-md-5 col-md-offset-1">
                        {{ form_row(form.clientInfo.siret) }}
                        {{ form_row(form.clientInfo.address) }}
                        {{ form_row(form.clientInfo.postalCode) }}
                        {{ form_row(form.clientInfo.city) }}
                        {{ form_row(form.clientInfo.company_creation_date) }}
                        {{ form_row(form.clientInfo.companyType) }}
                        {{ form_row(form.clientInfo.business) }}
                    </div>
            </div>
            {{ form_row(form._token) }}
            {{ form_end(form,{render_rest:false}) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ absolute_url(asset('build/b2b/js/client_registration.js')) }}"></script>
{% endblock %}

{% block javascripts_footer %}
    {{ parent() }}
{% endblock %}