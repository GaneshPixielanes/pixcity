<div class="container">
    <img src="/uploads/pack/banner/{{ pack.bannerImage }}" style="height:300px; width:100%" />
    <div class="row">
        <br/>
        <p class="col-12">{{ pack.packSkill | upper }}</p>
        <p class="col-12">
        <h4> {{ pack }} </h4>
        </p>
        <p class="col-12">
            Bonjour,

            <br/><br/>
            {{ pack.description }}
        </p>
        <hr/>
            <div class="col-12">
                <div class="row">
                <div class="col-xs-4" style="margin:30px">
                    <img src="{{ pack.user.getAvatar()  }}" class="rounded" style="height:75px;width:75px"/>
                </div>
                <div class="col-xs-4" style="margin:30px">
                    <small>Expertice Pix.City</small><br/>
                    {%   set instagram = pack.user.instagram|split("/") %}
                    {% if instagram[3] is defined %}
                        {{ instagram[3] }}
                    {% endif %}
                </div>
            <div class="col-xs-4" style="margin:30px">
                <small>Region</small><br/>
                {{ pack.user.userRegion.first.name | upper }}
            </div>
            <div class="col-xs-4" style="margin:30px">
                <small>Prix</small><br/>
                {{ pack.totalPrice }}â‚¬
            </div>
            <div class="col-xs-2 float-right" style="margin:30px">
                <a href="#" class="btn btn-md btn-info">Choose</a>
            </div>
            </div>
            </div>
        <hr/>
        <br/>
        <div class="row">
            <div class="col-xs-12">
                <h4>Photos:</h4>
                {% for media in pack.userPackMedia %}
                    <img src="/uploads/pack/{{ pack.id }}/{{ media }}" class="thumbnail" style="height:100px; width:100px" />
                {% endfor %}
            </div>
        </div>
        <div class="row" style="margin-top:50px">
                <h3>Zone:</h3>
            <ul>
                {% for region in pack.user.userRegion %}
                    <li>{{ region.name }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>