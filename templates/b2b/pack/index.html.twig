{% extends 'base.html.twig' %}

{% block body %}
    <div class="container" style="margin-top:100px">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <h1>Pack List Page</h1>
                </div>
                <div class="col-md-6">
                    <a href="{{ path('b2b_pack_create') }}" class="btn btn-md btn-primary float-right">New Pack</a>
                </div>
            </div>


            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <td>ID</td>
                                <td>Title</td>
                                <td>Description</td>
                                <td>Price</td>
                                <td>Edit / View</td>
                            </tr>
                        </thead>
                        <tbody>
                        {% for pack in packs %}
                            <tr>
                                <td>{{ pack.id }}</td>
                                <td>{{ pack.title }}</td>
                                <td>{{ pack.description }}</td>
                                <td>{{ pack.userBasePrice }}</td>
                                <td>
                                    <a href="{{ path('b2b_pack_view',{'id': pack.id}) }}" class="btn btn-sm btn-warning">View</a>
                                    <a href="{{ path('b2b_pack_edit',{'id': pack.id}) }}" class="btn btn-sm btn-info">Edit</a>
                                    <a href="#myModal_{{ pack.id }}" data-toggle="modal" class="btn">Delete</a>
                                </td>
                            </tr>

                            <div class="modal fade" id="myModal_{{ pack.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Close</span></button>

                                        </div>
                                        <div class="modal-body">



                                            <pa>are you want to delete the pack</pa>
                                            <a href="/b2b/pack/delete-pack/{{ pack.id }}" class="btn-danger">Yes</a>


                                        </div>

                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        </tbody>
                    </table>

                    <!-- Modal -->


                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}