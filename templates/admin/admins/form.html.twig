{% extends 'admin/admins/admins.html.twig' %}

{% form_theme form 'admin/_forms/fields.html.twig' %}

{% block breadcrumb %}
    <li><a href="{{ path('admin_admins_list') }}">{{ 'label.administrators'|trans }}</a></li>
    <li class="active">{{ ((item is defined)?'action.edit':'action.add')|trans }}</li>
{% endblock %}

{% block inner %}

    {{ form_start(form) }}

        {{ form_row(form.email) }}
        {{ form_row(form.firstname) }}
        {{ form_row(form.lastname) }}
        {{ form_row(form.position) }}
        {{ form_row(form.linkedinProfile) }}
        {{ form_row(form.profilePhoto) }}
        <br/>
        <ul class="repeater-container user-profilePhoto">
            <li class="align-center">
                {% if form.vars.data.profilePhoto  %}
                    <img class="thumb" src="{{ asset('/uploads/admin/'~form.vars.data.id~'/'~form.vars.data.profilePhoto) | imagine_filter('bg_card_item' )}}" width="20%">
                {% endif %}
            </li>
        </ul>
        <br/>
        {{ form_row(form.roles) }}
        {{ form_row(form.plainPassword.first) }}
        {{ form_row(form.plainPassword.second) }}

        <div class="flex-row-space-between">
            <a href="{{ path('admin_admins_list') }}" class="btn btn-lg bg-grey m-t-15 waves-effect">Annuler</a>
            <button type="submit" class="btn btn-lg bg-pink m-t-15 waves-effect">Enregistrer</button>
        </div>


    {{ form_end(form) }}

{% endblock %}
