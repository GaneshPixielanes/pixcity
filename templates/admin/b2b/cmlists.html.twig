{% extends 'admin/page.html.twig' %}
{% block content %}

    <ol class="breadcrumb breadcrumb-col-teal">
        <li><a href="{{ path('admin_dashboard_index') }}"><i class="material-icons">home</i> Accueil</a></li>
        <li class="active">{{ 'label.cmlist'|trans }}</li>
    </ol>

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        {{ 'label.cmlist'|trans }}
                    </h2>
                </div>
                <div class="body">
                    <table class="table table-striped table-middle-aligned active-datatable bulkable" data-defaultsortby="4" data-defaultsortdir="asc">
                    <thead>
                            <tr>
                                <th>ID</th>
                                <th>FirstName </th>
                                <th>LastName </th>
                                <th>Email</th>
                                <th>Date of upgrade</th>
                                <th>Nb of Packs </th>
                                <th>Action buttons (TBD)</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for item in list %}
                            {% embed "admin/b2b/cmlists/_row.html.twig" with {'item': item} %}{% endembed %}
                        {% else %}
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        {% endfor %}
                            </tbody>
                        </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
