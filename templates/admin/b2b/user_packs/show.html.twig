{% extends 'admin/page.html.twig' %}
{% block content %}

<ol class="breadcrumb breadcrumb-col-teal">
    <li><a href="{{ path('admin_dashboard_index') }}"><i class="material-icons">home</i> Accueil</a></li>
    <li class="active">{{ 'label.packsList'|trans }}</li>
</ol>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    {{ 'label.packs'|trans }}
                </h2>
                <div>
                    <a href="{{ path('admin_user_packs_index') }}" class="btn waves-effect pull-left"><i class="material-icons">keyboard_backspace</i> <span>{{ 'action.backtolist'|trans }}</span></a>

                    | <a href="{{ path('admin_user_packs_edit', {'id': user_pack.id}) }}" class="btn waves-effect pull-right"><i class="material-icons">edit</i> <span>{{ 'action.edit'|trans }}</span></a>
                </div>
            </div>
            <div class="body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Title</th>
                            <td>{{ user_pack.title }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ user_pack.description }}</td>
                        </tr>
                        <tr>
                            <th>BannerImage</th>
                            <td> <img src="{{ absolute_url('/uploads/'~user_pack.bannerImage) }}" alt="{{ user_pack.title }}" width="20%"></td>
                        </tr>
                        <tr>
                            <th>UserBasePrice</th>
                            <td>{{ user_pack.userBasePrice }}</td>
                        </tr>
                        <tr>
                            <th>MarginValue</th>
                            <td>{{ user_pack.marginValue }}</td>
                        </tr>
                        <tr>
                            <th>TotalPrice</th>
                            <td>{{ user_pack.totalPrice }}</td>
                        </tr>
                        <tr>
                            <th>PackPhotos</th>
                            <td> <img src="{{ absolute_url('/uploads/'~user_pack.packPhotos) }}" alt="{{ user_pack.title }}" width="20%"></td>
                        </tr>
                        <tr>
                            <th>CreatedAt</th>
                            <td>{{ user_pack.createdAt ? user_pack.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>UpdatedAt</th>
                            <td>{{ user_pack.updatedAt ? user_pack.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>DeletedAt</th>
                            <td>{{ user_pack.deletedAt ? user_pack.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Active</th>
                            <td>{{ user_pack.active ? 'Yes' : 'No' }}</td>
                        </tr>
                        <tr>
                            <th>Deleted</th>
                            <td>{{ user_pack.deleted ? 'Yes' : 'No' }}</td>
                        </tr>
                        <tr>
                            <th> </th>
                            <td></td>
                        </tr>
                        <tr>
                            <th></th>
                            <th>Pack Skill</th>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ user_pack.packSkill.name }}</td>
                        </tr>
                        <tr>
                            <th>Slug</th>
                            <td>{{ user_pack.packSkill.slug }}</td>
                        </tr>
                        <tr>
                            <th>Created At</th>
                            <td>{{ user_pack.packSkill.createdAt ? user_pack.packSkill.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Updated At</th>
                            <td>{{ user_pack.packSkill.updatedAt ? user_pack.packSkill.updatedAt|date('Y-m-d H:i:s') : ''  }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}
