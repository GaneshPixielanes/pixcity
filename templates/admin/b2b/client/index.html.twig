{% extends 'admin/page.html.twig' %}
{% block content %}

<ol class="breadcrumb breadcrumb-col-teal">
    <li><a href="{{ path('admin_dashboard_index') }}"><i class="material-icons">home</i> Accueil</a></li>
    <li class="active">{{ 'label.clientsList'|trans }}</li>
</ol>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    {{ 'label.clientsList'|trans }}
                </h2>
            </div>
            <div class="body">
                <table class="table table-striped table-middle-aligned active-datatable" data-defaultsortby="4">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>FirstName </th>
                            <th>LastName </th>
                            <th>Email</th>
                            <th>Company</th>
                            <th>SIRET</th>
                            <th>Date of Reg </th>
                            <th>View and other CTA</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for client in clients %}
                        <tr>
                            <td>{{ client.id }}</td>
                            <td>{{ client.firstName }}</td>
                            <td>{{ client.lastName }}</td>
                            <td>{{ client.email }}</td>
                            <td>{{ client.company }}</td>
                            <td>{{ client.clientInfo ? client.clientInfo.siret: 'N/A' }}</td>
                            <td>{{ client.createdAt ? client.createdAt|date('d-M-Y'):'N/A' }}</td>
                            <td>
                                <a href="{{ path('admin_client_show', {'id': client.id}) }}" title="{{ 'action.show_more_cards'|trans }}" class="btn btn-circle bg-pink waves-effect waves-circle waves-float"><i class="material-icons">visibility</i></a>
                                | <a href="{{ path('admin_client_edit', {'id': client.id}) }}" title="{{ 'action.edit'|trans }}" class="btn btn-circle bg-pink waves-effect waves-circle waves-float"><i class="material-icons">edit</i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="12">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
