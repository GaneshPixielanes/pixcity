{% extends 'admin/page.html.twig' %}
{% form_theme form 'admin/_forms/fields.html.twig' %}
{% block content %}

<ol class="breadcrumb breadcrumb-col-teal">
    <li><a href="{{ path('admin_dashboard_index') }}"><i class="material-icons">home</i> Accueil</a></li>
    <li class="active">{{ 'label.clientsList'|trans }}</li>
</ol>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Edit Client
                </h2>
            </div>
            <div class="body">
                {{ include('admin/b2b/client/_form.html.twig', {'button_label': 'Update'}) }}

                <a href="{{ path('admin_client_index') }}">back to list</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js"></script>
    <script>

        $(function () {
            $("#client_clientInfo_companyCreationDate").bootstrapMaterialDatePicker({ format : 'YYYY-MM-DD', lang : 'fr', weekStart : 1, cancelText : 'ANNULER', time: false });

        });
        $(document).ready(function(){
            $('#profilePhoto').change(function()
            {
                var data = new FormData();
                data.append('file',$(this)[0].files[0]);
                data.append('id',{{ client.id }});
                $.ajax('{{ url('admin_client_upload') }}',{
                    method: 'POST',
                    processData: false,
                    cacheable:false,
                    data:data,
                    contentType: false,
                    success: function(result)
                    {
                        if(result.success == true)
                        {
                            $('[name="client[profilePhoto]"').val(result.fileName);
                        }
                    }
                });
            });


                $('#mangopayKycFile').change(function()
                {
                    var data = new FormData();
                    data.append('file',$(this)[0].files[0]);
                    data.append('id',{{ client.id }});
                    $.ajax('{{ url('admin_client_mangopaykyc') }}',{
                        method: 'POST',
                        processData: false,
                        cacheable:false,
                        data:data,
                        contentType: false,
                        success: function(result)
                        {
                            if(result.success == true)
                            {
                                $('[name="client[clientInfo][mangopayKycFile]"').val(result.fileName);
                            }
                        }
                    });
                });
                $('#mangopayKycAddr').change(function()
                {
                    var data = new FormData();
                    data.append('file',$(this)[0].files[0]);
                    data.append('id',{{ client.id }});
                    $.ajax('{{ url('admin_client_mangopayKycAddr') }}',{
                        method: 'POST',
                        processData: false,
                        cacheable:false,
                        data:data,
                        contentType: false,
                        success: function(result)
                        {
                            if(result.success == true)
                            {
                                $('[name="client[clientInfo][mangopayKycAddr]"').val(result.fileName);
                            }
                        }
                    });
                });
        });
    </script>
{% endblock %}