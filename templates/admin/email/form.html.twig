{% extends 'admin/email/emails.html.twig' %}

{% form_theme form 'admin/_forms/fields.html.twig' %}

{% block breadcrumb %}
    <li>E-mail</li>
    <li class="active">Add E-mail</li>
{% endblock %}

{% block inner %}

    {{ form_start(form) }}

    {{ form_row(form.name) }}
    {{ form_row(form.slug) }}
    {{ form_row(form.subject) }}
    {{ form_row(form.content) }}
    {{ form_row(form.sentTo) }}
    {{ form_row(form.status) }}
    <div class="form-group">
        <div class="pull-right">
            <a href="#" class="btn btn-primary btn-md" data-toggle="modal" data-target="#previewModal">Preview</a>
            <button type="submit" href="#" class="btn btn-success btn-md">Save</button>
        </div>
    </div>
    {{ form_end(form) }}

    <div id="previewModal" class="modal fade" role="document">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Preview</h4>
                </div>
                <div class="modal-body">
                    <div class="alert alert-info">
                        <strong>Please Note:</strong>
                        The preview does not provide 100% accurate representation of how it will appear in your inbox
                    </div>
                    <div class="col-md-12" id="previewBody">

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
        <script src="{{ asset('build/admin/js/pages/email.js') }}"></script>
    <script>

    </script>
{% endblock %}